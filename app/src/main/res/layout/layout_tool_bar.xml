<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/tool_bar"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    app:title="@string/app_name"
    app:titleTextAppearance="@style/BookTheme.ToolBar.Title"
    app:theme="@style/BookTheme.ToolBar"
    app:popupTheme="@style/BookTheme.ToolBar.PopupMenu">

    <TextView
        android:id="@+id/tv_title"
        tools:text="@string/app_name"
        android:textSize="@dimen/actionBarTextSize"
        android:visibility="gone"
        android:textColor="@color/action_text_color"
        android:maxLines="1"
        android:maxLength="15"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.Toolbar>