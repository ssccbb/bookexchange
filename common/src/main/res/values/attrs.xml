<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Loading">
        <attr name="loading_text" format="string"/>
        <attr name="loading_text_size" format="integer"/>
        <attr name="loading_text_color" format="color"/>
        <attr name="loading_stroke_color" format="color"/>
        <attr name="loading_solid_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--//垂直滚动字幕-->
    <declare-styleable name="VerticalRollingTextView">
        <!--两次动画之间的间隔-->
        <attr name="animInterval" format="integer"/>
        <!--展示条目的个数-->
        <attr name="itemCount" format="integer"/>
        <!--多行显示时自适应文字的最大文字大小-->
        <attr name="maxTextSize" format="dimension"/>
        <!--多行显示时自适应文字的最小文字大小-->
        <attr name="minTextSize" format="dimension"/>
    </declare-styleable>
</resources>