<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CommonLoaderStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--DialogFragment样式-->
    <style name="DialogFragmentStyle" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>
    <style name="FadeDialogFragmentStyle" parent="@style/DialogFragmentStyle">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>
    <style name="AnimFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>