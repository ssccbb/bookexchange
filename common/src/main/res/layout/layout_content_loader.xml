<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/fl_loading_view"
        style="@style/CommonLoaderStyle"
        layout="@layout/layout_loading_view" />

    <include
        android:id="@+id/fl_error_view"
        style="@style/CommonLoaderStyle"
        layout="@layout/layout_error_view" />

    <include
        android:id="@+id/fl_empty_view"
        style="@style/CommonLoaderStyle"
        layout="@layout/layout_empty_view" />

    <FrameLayout
        android:id="@+id/fl_content_view"
        style="@style/CommonLoaderStyle" />

</LinearLayout>